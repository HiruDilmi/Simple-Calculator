<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="400.0" maxWidth="280.0" minHeight="400.0" minWidth="280.0" prefHeight="400.0" prefWidth="280.0" spacing="20.0" stylesheets="@calculator.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.CalcController">
