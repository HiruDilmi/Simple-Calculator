      <TextField fx:id="equationDisplay" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0" styleClass="equationDisplay" translateY="10.0" />
      <TextField fx:id="resultDisplay" nodeOrientation="RIGHT_TO_LEFT" prefHeight="35.0" styleClass="resultDisplay" translateY="-10.0" />
      <GridPane hgap="5.0" translateY="-15.0" vgap="5.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
