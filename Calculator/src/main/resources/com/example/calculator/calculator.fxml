               </GridPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleOperators" prefHeight="50.0" prefWidth="60.0" styleClass="button-controller" stylesheets="@calculator.css" text="\%" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets bottom="1.0" right="1.0" top="1.0" />
               </GridPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleNumbers" prefHeight="50.0" prefWidth="60.0" styleClass="button-number" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="1.0" right="1.0" top="1.0" />
               </GridPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleNumbers" prefHeight="50.0" prefWidth="60.0" styleClass="button-number" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="1.0" right="1.0" top="1.0" />
               </GridPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleNumbers" prefHeight="50.0" prefWidth="60.0" styleClass="button-number" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets bottom="1.0" right="1.0" top="1.0" />
               </GridPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleAnswers" prefHeight="50.0" prefWidth="120.0" styleClass="button-controller" stylesheets="@calculator.css" text="=" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="4">
